extends layout

block content
    h1.text-center All Cars

    .container
        table.table.table-hover
            thead
                tr
                    if(!user)
                        th Image
                        th Make
                        th Model
                        th Year
                        th Price
                        th Description
                    else
                        th Image
                        th Make
                        th Model
                        th Year
                        th Price
                        th Description
                        th.text-center Actions
            tbody
                each ad in adv
                    tr
                        td
                            img(width="100px" height="auto" src='/images/'+ad.image)
                        td= ad.make
                        td= ad.model
                        td= ad.year
                        td= ad.price
                        td= ad.description
                        if(user)
                            td 
                                a(href='/update/'+ad.id) Edit
                            td 
                                form.deleteForm(id=ad.id)
                                    button(type='submit') Delete
    //- jQuery and delete file for functionality
    script(src='https://code.jquery.com/jquery-3.5.1.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
    script(src='/javascripts/deletejs.js')        

